<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mrtian.project.ui.view.systemsetting.SettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide" />

        <TextView
            android:id="@+id/setting_about_us_text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="关于我们"
            android:textColor="@color/main_text_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="清除缓存"
                android:textColor="@color/main_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/setting_cache_size_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/arrow_right"
                android:gravity="center|right"
                android:paddingRight="15dp"
                android:text="0kb"
                android:textColor="@color/sub_text_color"
                android:textSize="13sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide" />

        <TextView
            android:id="@+id/setting_change_password_text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text="修改密码"
            android:textColor="@color/main_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_logout_text"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logout_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/mc_login_out_bg" />
    </LinearLayout>
</LinearLayout>
